@{
    ViewBag.Title = "文章分类";
}
@model XGY_WeiXin.Areas.Admin.Models.ArticleCategoryList
<div class="col-md-10">
    <div class="content-box-large">

        <div class="panel-body">
            <div class="toolbar">
                <a href="@Url.Action("Create")" class="btn btn-success">新增分类</a>             
            </div>
            <br />
            <table class="table table-striped table-bordered "
                   id=" TableList">
                <thead>
                    <tr>
                        <th>名称</th>
                        <th>编辑</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>                           
                            <td>@item.Name</td>
                            <td>
                                <a href="@Url.Action("Update","ArticleCategory",new{id=item.Id})" class="btn btn-default">编辑</a>
                                <a href="@Url.Action("Delete", "ArticleCategory", new {ids=item.Id})" class="btn btn-primary">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


