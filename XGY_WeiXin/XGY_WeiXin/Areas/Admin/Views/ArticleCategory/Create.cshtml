@{
    ViewBag.Title = "Create";
}
@model XGY_WeiXin.Areas.Admin.Models.CreateArticleCategory
<div class="col-md-10">
    <div class="row">
        <div class="col-md-12">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">新建文章</div>
                </div>
                <div class="panel-body">
                    <div id="rootwizard">
                        <div class="tab-content">
                            <div class="tab-pane active">
                                @using (Html.BeginForm("Create", "ArticleCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-5">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "文章分类" })
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="help-block">@Html.ValidationMessageFor(x => x.Name)</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-default">确定</button>                                            
                                            <a href="@Url.Action("Index")"><label class="btn btn-primary">取消</label></a>                                        
                                                <div class="help-block">@Html.ValidationSummary(true)</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

