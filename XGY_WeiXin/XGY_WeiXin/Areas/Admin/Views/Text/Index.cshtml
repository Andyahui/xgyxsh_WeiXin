@{
    ViewBag.Title = "文本素材";
}
@model XGY_WeiXin.Areas.Admin.Models.PageResponseTextList
<div class="col-md-10">
    <div class="content-box-large">

        <div class="panel-body">
            <div class="toolbar">
                <a href="@Url.Action("Create")" class="btn btn-success">新增响应文本</a>
            </div>
            <br />
            <table class="table table-striped table-bordered "
                   id=" TableList">
                <thead>
                    <tr>
                        <th>文本消息</th>
                        <th>创建时间</th>
                        <th>编辑</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Content</td>
                            <td>@item.CreateTime</td>
                            <td>
                                <a href="@Url.Action("Update","Text",new{id=item.Id})" class="btn btn-default">编辑</a>
                                <a href="@Url.Action("Delete", "Text", new {id=item.Id})" class="btn btn-primary">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

