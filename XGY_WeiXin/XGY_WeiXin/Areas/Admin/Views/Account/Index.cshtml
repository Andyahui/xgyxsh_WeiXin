@{
    ViewBag.Title = "微信后台欢迎您";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Login.cshtml";
}
@model XGY_WeiXin.Areas.Admin.Models.UserAccountView
<div class="col-md-4 col-md-offset-4">
    <div class="login-wrapper">
        <br /><br />
        <br /><br />
        <div class="box">
            <div class="content-wrap">
                @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <h6>欢迎您</h6>
                    @Html.TextBoxFor(x => x.LoginName, new { @class = "form-control", placeholder = "用户名" })
                    <div class="help-block">
                        @Html.ValidationMessageFor(x => x.LoginName)
                    </div>
                    <br/>
                    @Html.PasswordFor(x => x.LoginPwd, new { @class = "form-control", placeholder = "密码" })
                    <div class="help-block">
                        @Html.ValidationMessageFor(x => x.LoginPwd)
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">登录</button>
                   <div class="help-block">@Html.ValidationSummary(true)</div> 
                }
            </div>
        </div>
        <div class="already">
            <p>若不能登录，请联系系统管理员。</p>
        </div>
    </div>
</div>
