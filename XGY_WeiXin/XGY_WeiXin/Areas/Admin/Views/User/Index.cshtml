@{
    ViewBag.Title = "Index";
}
@model XGY_WeiXin.Areas.Admin.Models.UserListView
<div class="col-md-10">
    <div class="content-box-large">
        <div class="panel-body">
            <div class="toolbar">
                <a href="@Url.Action("Create")" class="btn btn-success">新增用户</a>
            </div>
            <br />
            <table class="table table-striped table-bordered "
                   id=" TableList">
                <thead>
                    <tr>
                        <th>头像</th>
                        <th>登录名</th>
                        <th>用户名</th>
                        <th>编辑</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td><img src="@item.HeadPhoto" class="img-circle"/></td>
                            <td>@item.LoginName</td>
                            <td>@item.UserName</td>
                            <td>
                                <a href="@Url.Action("Update","User",new{id=item.Id})" class="btn btn-default">编辑</a>
                                <a href="@Url.Action("Delete", "User", new {ids=item.Id})" class="btn btn-primary">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

