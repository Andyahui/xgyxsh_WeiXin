@{
    ViewBag.Title = "Index";
}
@model XGY_WeiXin.Areas.Admin.Models.PageArticleList
<div class="col-md-10">
    <div class="content-box-large">
        <div class="panel-body">
            <div class="toolbar">
                <a href="@Url.Action("Create")" class="btn btn-success">新增文章</a>
            </div>
            <br />
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"
                   id="example">
                <thead>
                    <tr>
                        <th>标题</th>
                        <th>创建时间</th>
                        <th>作者</th>
                        <th>文章分类</th>
                        <th>编辑</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreateTime</td>
                            <td>@item.User.UserName</td>
                            <td>@item.ArticleCategory.Name</td>
                            <td>
                                <a href="@Url.Action("Update","Article",new{id=item.Id})" class="btn btn-default">编辑</a>
                                <a href="@Url.Action("Delete", "Article", new {ids=item.Id})" class="btn btn-primary">删除</a>
                            </td>
                        </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
